<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bread"
    tools:context="com.example.carlos.loafgotruckmodule.optionsActivity">

    <Button
        android:id="@+id/scanOrderButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_marginTop="85dp"
        android:text="Add an Order for Delivery"
        android:textAlignment="center"
        android:textSize="12pt"
        android:onClick="onClick"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:backgroundTintMode="src_over"/>

    <Button
        android:id="@+id/viewOrderButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:text="View Scanned Orders"
        android:textAlignment="center"
        android:textSize="12pt"
        android:onClick="onClick"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:backgroundTintMode="src_over"/>

    <Button
        android:id="@+id/RouteButton"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:layout_gravity="center"
        android:text="Delivery Routes"
        android:textAlignment="center"
        android:textSize="12pt"
        android:onClick="onClick"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:backgroundTintMode="src_over"/>

</LinearLayout>
